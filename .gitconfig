[color]
    diff  = auto
    status= auto
    branch= auto
    interactive = true

[alias]
    ci = commit
    di = diff --color-words
    st = status
    co = checkout
    gl = log --decorate --oneline --graph
    st2 = status -uno
    targz = !git archive --prefix=`basename $PWD`/ master | gzip > `basename $PWD`.tar.gz
    targz2 = !git archive --prefix=`basename $PWD`/ master | gzip > `basename $PWD`_tar_gz