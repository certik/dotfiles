[core]
    editor = vim

[user]
    name = Ondřej Čertík
    email = ondrej@certik.us

[color]
    diff  = auto
    status= auto
    branch= auto
    interactive = true

[alias]
    ci = commit
    di = diff --color-words
    st = status --ignored
    co = checkout
    gl = log --decorate --oneline --graph
    st2 = status -uno
    targz = !git archive --prefix=`basename $PWD`/ master | gzip > `basename $PWD`.tar.gz
    targz2 = !git archive --prefix=`basename $PWD`/ master | gzip > `basename $PWD`_tar_gz
    # Use this as follows: git sed old_method_name new_method_name
    sed = !sh -c 'git grep --null --full-name --name-only --perl-regexp -e \"$1\" | xargs -0 perl -i -p -e \"s/$1/$2/g\"' -
    pr-github = !sh -c 'git fetch origin pull/$1/head:pr-$1 && git checkout pr-$1' -
    pr-bitbucket = !sh -c 'git fetch origin pull-requests/$1/from:pr-$1 && git checkout pr-$1' -
    pr-gitlab = !sh -c 'git fetch origin merge-requests/$1/head:pr-$1 && git checkout pr-$1' -
    mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
